{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  
  "configurePresets": [
    {
      "name": "vs",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
      }
    }
  ],

  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "vs",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "vs",
      "configuration": "Release"
    }
  ],

  "testPresets": [
    {
      "name": "Debug",
      "configurePreset": "vs",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "vs",
      "configuration": "Release"
    }
  ]
}